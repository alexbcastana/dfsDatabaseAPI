@model IEnumerable<dfsTest.Models.Player>

@{
    ViewBag.Title = "C";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Centers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th></th>
    </tr>

    @foreach (var player in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => player.FName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => player.LName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => player.Salary)
        </td>
        <th>
            @Html.DisplayFor(modelItem => player.Position)
        </th>
        <th>
            @{
                <button type="button" onclick="location.href='@Url.Action("SelectPlayer", "MainPage")'">Select Player</button>

            }
        </th>
    </tr>
    }

</table>